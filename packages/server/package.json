{
  "name": "@danilupion/turbo-server",
  "version": "1.1.0",
  "author": {
    "name": "Dani Lupi√≥n",
    "email": "danilupion@gmail.com"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./dist/*"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "scripts": {
    "build": "if ! [[ $NOCLEAN = \"1\" ]]; then rm -rf ./dist; fi && tsc",
    "build:watch": "export NOCLEAN=1 && nodemon --watch src -e ts,json --exec 'yarn build'",
    "build:check": "tsc -p tsconfig.json --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint:fix": "eslint -c .eslintrc.json 'src/**/*.ts' --fix",
    "lint": "eslint -c .eslintrc.json 'src/**/*.ts'",
    "prettify": "prettier --write  \"./src/**/*.{ts,json}\""
  },
  "dependencies": {
    "@danilupion/turbo-common": "1.1.0",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport": "^1.0.12",
    "@types/passport-facebook": "^2.1.11",
    "bcrypt": "^5.1.0",
    "config": "^3.3.8",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jest-environment-node": "^29.5.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.2",
    "mongodb-memory-server": "^8.13.0",
    "nodemailer": "^6.9.3",
    "passport": "^0.6.0",
    "passport-anonymous": "^1.0.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "socket.io": "^4.7.1",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@jest/environment": "^29.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.2",
    "@types/nodemailer": "^6.4.8",
    "@types/passport-anonymous": "^1.0.3",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn prettify",
      "yarn lint:fix --max-warnings=0",
      "yarn test"
    ]
  }
}
